<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
		<bean 	id = "userService"
				class = "learn.spring25.UserServiceImpl" />
				
		<bean 	name = "/HessianUserService" 
				class="learn.spring25.remoting.server.hessian.CustomHessianServiceExporter">
			<property name="serviceInterface" value="learn.spring25.UserService" />
			<property name="service" ref="userService" />
		</bean>	
</beans>